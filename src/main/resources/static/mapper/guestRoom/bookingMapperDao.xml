                LEADERPHONE=#{leaderPhone},
                LEADERROOMNO=#{leaderRoomNo},
                DAYS=#{days},
                STARTDATE=#{startDate},
                ENDDATE=#{endDate},
                EXTRABED=#{extraBed},
